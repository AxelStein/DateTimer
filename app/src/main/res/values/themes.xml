<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DateTimer" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/color_primary_day</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_day</item>
        <item name="colorAccent">@color/color_primary_day</item>
        <item name="android:windowBackground">@color/color_bg_day</item>
        <item name="android:navigationBarColor">@color/color_bg_day</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.DateTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DateTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DateTimer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>